<UserControl x:Class="WYW.UI.Test.Views.CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WYW.UI.Test.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="常规用法">
            <UniformGrid  Columns="2"  Rows="10">
                <CheckBox Content="正常1"/>
                <CheckBox Content="正常2"/>
                <CheckBox Grid.Column="1" Content="禁用" IsEnabled="False"/>
                <CheckBox Grid.Column="2" Content="三态" IsThreeState="True" IsChecked="{x:Null}"/>
            </UniformGrid>
        </GroupBox>
        <GroupBox Grid.Column="2" Header="高级用法">
            <UniformGrid  Columns="2"  Rows="10">

            </UniformGrid>
        </GroupBox>
    </Grid>
</UserControl>
