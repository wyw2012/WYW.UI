<Window x:Class="WYW.UI.Test.Views.Windows.CornerRadiusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WYW.UI.Test.Views.Windows"
         xmlns:wyw="http://wangyanwei.com/ui"
        mc:Ignorable="d" FontSize="16"
        Style="{StaticResource WindowNoTitleBarStyle}"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="CornerRadiusWindow" Height="300" Width="500"
        wyw:WindowElement.CornerRadius="20">
    <Grid>
        <TextBlock HorizontalAlignment="Center"  Text="1、使用了WindowNoTitleBarStyle样式的窗体， &#13; 2使用附加属性wyw:WindowElement.CornerRadius， &#13; 3AllowsTransparency=True， &#13; WindowStyle=None"/>
    </Grid>
</Window>
